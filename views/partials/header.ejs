<h1>The Budget EJS Application</h1>
<% if (user) { %>
   <p>User <%= user.name %> is logged on.</p>
   <form method="POST" action="/sessions/logoff">
   <input type="hidden" name="_csrf" value="<%= _csrf %>" />
   <button>Logoff</button>
   </form>
<% } %>
<% if (!user) { %>
  <p>No User Active. Please Register or Logon.</p>
<% } %>
<% if (errors) {
    errors.forEach((err) => { %>
      <div>
        Error: <%= err %>
      </div>
    <% })
  } %>
  <% if (info) {
    info.forEach((msg) => { %>
      <div>
        <%= msg %>
      </div>
    <% })
  } %>
<hr />